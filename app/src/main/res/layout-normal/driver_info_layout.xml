<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="13"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <FrameLayout style="@style/SubFrameLayoutWeight1"
            android:layout_height="wrap_content"
            >
            <TextView style="@style/NormalFontAndSize.MarginLeft40"
                android:text="Username"
                android:textStyle="bold"
                android:textColor="#323232"
                />
            <TextView style="@style/NormalFontAndSize.MarginLeft170"
                android:text=": 29 March 2014"
                android:textColor="#323232"
                android:id="@+id/txtusername"/>

        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_line"/>

        <FrameLayout style="@style/SubFrameLayoutWeight1"
            android:layout_height="wrap_content">

            <TextView style="@style/NormalFontAndSize.MarginLeft40"
                android:textColor="#323232"
                android:textStyle="bold"
                android:text="Taxi Number"/>
            <TextView style="@style/NormalFontAndSize.MarginLeft170"
                android:text=": MH 12 AB 1265"
                android:textColor="#323232"
                android:id="@+id/txtClass"/>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_line"/>

        <FrameLayout style="@style/SubFrameLayoutWeight1"
            android:layout_height="wrap_content">
            <TextView style="@style/NormalFontAndSize.MarginLeft40"
                android:textColor="#323232"
                android:textStyle="bold"
                android:text="Latitude"/>
            <TextView style="@style/NormalFontAndSize.MarginLeft170"
                android:text=": latitude"
                android:textColor="#323232"
                android:id="@+id/txtcurrentlatitude"/>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_line"/>
        <FrameLayout style="@style/SubFrameLayoutWeight1"
            android:layout_height="wrap_content">
            <TextView style="@style/NormalFontAndSize.MarginLeft40"
                android:textColor="#323232"
                android:textStyle="bold"
                android:text="Longitude"/>
            <TextView style="@style/NormalFontAndSize.MarginLeft170"
                android:text=": longitude"
                android:textColor="#323232"
                android:id="@+id/txtcurrentlongitude"/>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_line"/>
        <FrameLayout style="@style/SubFrameLayoutWeight1"
            android:layout_height="wrap_content">
            <TextView style="@style/NormalFontAndSize.MarginLeft40"
                android:textColor="#323232"
                android:textStyle="bold"
                android:text="Contact Number"/>
            <TextView style="@style/NormalFontAndSize.MarginLeft170"
                android:text=": 020-556677"
                android:textColor="#323232"
                android:id="@+id/txtContactNo"/>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_line"/>
        <FrameLayout style="@style/SubFrameLayoutWeight1"
            android:layout_height="wrap_content"
            android:layout_weight="1.7">
            <TextView style="@style/NormalFontAndSize.MarginLeft40"
                android:textColor="#323232"
                android:textStyle="bold"
                android:text="Address"/>
            <TextView style="@style/NormalFontAndSize.MarginLeft170"
                android:text=":Shastri Nagar Chowk, Near IBM,Don Bosco Road,Yerawada, Pune, Maharashtra 411006"
                android:textColor="#323232"
                android:id="@+id/txtaddress"/>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_line"/>
        </LinearLayout>
</LinearLayout>
